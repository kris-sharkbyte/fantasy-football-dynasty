{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "importHelpers": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noPropertyAccessFromIndexSignature": true,
  },
  "files": ["src/index.ts"],
  "include": ["src/index.ts", "src/config.ts", "src/lib/utils/admin.ts", "src/simple-functions.ts"],
  "exclude": ["src/lib/**/*", "src/types.ts"]
}
